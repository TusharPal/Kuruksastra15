<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_display_image_list_item_contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/textView_name_list_item_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignBottom="@+id/view_display_image_list_item_contact"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view_display_image_list_item_contact"
        android:text="Contact name"/>
</RelativeLayout>